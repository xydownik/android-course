<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"

    android:orientation = "vertical">

    <ImageView
        android:id="@+id/npizza"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            tools:text="Pizza 30 cm &amp; 2 drinks"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/nsmalldescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            tools:text="Beef kebab, ranch sauce, mozarella cheese, sweet pepper, tomatoes, red onion, marinara sauce"
            android:textSize="13sp" />

        <Button
            android:id="@+id/nprice"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginLeft="200dp"
            android:backgroundTint="@color/light_orange"
            android:elevation="4dp"
            android:textColor="@color/orange"
            android:textSize="14sp"
            tools:text="4900KZT" />
    </LinearLayout>


</LinearLayout>